          "meal_id": 1,
          "name": "Corned Beef Hash",
          "portions": 4
        }
      ]
    }
  },
  "POST /api/meals": {
    "description": "posts a new meal",
    "queries": [],
    "examplePostObject": {
      "name": "Beef, beans and onion",
      "portions": 2,
      "recipe": [
        { "ingredient_id": 1, "quantity": 1 },
        { "ingredient_id": 2, "quantity": 2 },
        { "ingredient_id": 3, "quantity": 3 }
      ]
    },
    "exampleResponse": {
      "recipe": [
        {
          "name": "Corned Beef",
          "type": "Store cupboard",
          "ingredient_id": 1,
          "units": "cans",
          "meal_id": 4,
          "quantity": 1
        },
        {
          "name": "Baked Beans",
          "type": "Store cupboard",
          "ingredient_id": 2,
          "units": "cans",
          "meal_id": 4,
          "quantity": 2
        },
        {
          "name": "Onion",
          "type": "Veg",
          "ingredient_id": 3,
          "units": "no",
          "meal_id": 4,
          "quantity": 3
        }
      ],

      "name": "Beef, beans and onion",
      "portions": 2,
      "meal_id": 4
    }
  },
  "GET /api/meals/:meal_id": {
    "description": "serves a meal object with correct mealname, ingredients & quantities",
    "queries": [],
    "exampleResponse": {
      "meal": {
